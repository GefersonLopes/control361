{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "module": "CommonJS",
    "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*",
    "jest.config.ts",
    "jest.setup.ts",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
